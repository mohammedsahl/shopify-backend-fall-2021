<h1 class="display-4 mb-4">Upload an image</h1>
<form id="uploadImage" enctype="multipart/form-data" action="/images/upload" method="post">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="imageTitle">Title</label>
          <input name="imageTitle" type="text" class="form-control" placeholder="Try 'Supercatto!' or something... ">
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="imageTags">Tags</label>
          <input name="imageTags" type="text" class="form-control" placeholder="Cute, Persian, C H O N K, ...">
        </div>
      </div>
    </div>
  <div class="form-group">
    <div class="custom-file">
      <label id='imageUploadField' class="custom-file-label" for="customFile">Choose files</label>
      <input type="file" class="custom-file-input" name="image" id="customFile" accept="image/*" multiple>
    </div>
  </div>
  <button type="submit" class="btn btn-dark">Submit</button>
</form>
