<form id="uploadImage" enctype="multipart/form-data" action="/images/upload" method="post">
  <div class="form-group">
    <div class="custom-file">
      <label id='imageUploadField' class="custom-file-label" for="customFile">Choose files</label>
      <input type="file" class="custom-file-input" name="image" id="customFile" accept="image/*" multiple>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col">
        <label for="imageTitle">Title</label>
        <input id='imageTitle' type="text" class="form-control" placeholder="Try 'Supercatto!' or something... ">
      </div>
      <div class="col">
        <label for="imageTags">Tags</label>
        <input id='imageTags' type="text" class="form-control" placeholder="Cute, Persian, C H O N K, ...">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>